<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>securedev</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>HomePage</servlet-name>
    <jsp-file>/HomePage.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>controller.LoginController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>controller.LogoutController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>controller.RegisterController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EditProfile</servlet-name>
    <servlet-class>controller.EditProfileController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Post</servlet-name>
    <servlet-class>controller.PostController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreatePost</servlet-name>
    <jsp-file>/CreatePost.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>EditPost</servlet-name>
    <servlet-class>controller.EditPostController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Image</servlet-name>
    <servlet-class>controller.ImageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomePage</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreatePost</servlet-name>
    <url-pattern>/user/createpost</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/user/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditProfile</servlet-name>
    <url-pattern>/user/edit/profile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Post</servlet-name>
    <url-pattern>/globalPosts</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditPost</servlet-name>
    <url-pattern>/user/edit/post</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Image</servlet-name>
    <url-pattern>/images</url-pattern>
  </servlet-mapping>
</web-app>